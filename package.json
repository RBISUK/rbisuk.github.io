{
  "name": "rbis-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "seo:generate-faqs": "node ops/seo/generate_faqs.mjs",
    "seo:commit": "git add \"app/(hdr)/faq\" && (git diff --cached --quiet || git commit -m \"chore(seo): auto FAQ refresh\")",
    "postbuild": "next-sitemap && node ops/health/ping_sitemaps.mjs",
    "health:links": "CHECK_URL=http://localhost:4000 node ops/health/check_links.mjs",
    "test:lighthouse": "lhci autorun",
    "test:axe": "playwright test --config=tests/playwright.config.ts",
    "test:e2e": "playwright test --config=tests/playwright.config.ts --project=e2e",
    "test:promises": "bash ./scripts/promise_guard.sh",
    "predeploy": "npm run test:promises && npm run build && npm run test:lighthouse && npm run test:axe && npm run test:e2e"
  },
  "dependencies": {
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20.19.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "lighthouse-ci": "^1.13.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "zod": "^4.1.9"
  }
}
